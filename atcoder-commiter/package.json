{
  "name": "atcoder-commiter",
  "displayName": "AtCoder Commiter",
  "description": "Automatically save your AtCoder submissions to GitHub",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "atcoder-commiter",
          "title": "AtCoder Commiter",
          "icon": "$(code)"
        }
      ]
    },
    "views": {
      "atcoder-commiter": [
        {
          "id": "atcoder-commiter.submissions",
          "name": "Submissions",
          "contextualTitle": "AtCoder Submissions"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "atcoder-commiter.submissions",
        "contents": "Welcome to AtCoder Commiter!\n\n[Set AtCoder Username](command:atcoder-commiter.setUsername)\n[Set Repository URL](command:atcoder-commiter.setRepo)\n[Set GitHub Token](command:atcoder-commiter.setGitHubToken)\n\nAfter configuration, click Refresh to fetch submissions.\n[Refresh Submissions](command:atcoder-commiter.refresh)"
      }
    ],
    "commands": [
      {
        "command": "atcoder-commiter.refresh",
        "title": "Refresh Submissions",
        "category": "AtCoder Commiter",
        "icon": "$(refresh)"
      },
      {
        "command": "atcoder-commiter.setUsername",
        "title": "Set AtCoder Username",
        "category": "AtCoder Commiter"
      },
      {
        "command": "atcoder-commiter.setRepo",
        "title": "Set Repository URL",
        "category": "AtCoder Commiter"
      },
      {
        "command": "atcoder-commiter.setGitHubToken",
        "title": "Set GitHub Token",
        "category": "AtCoder Commiter"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "atcoder-commiter.refresh",
          "when": "view == atcoder-commiter.submissions",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AtCoder Commiter",
      "properties": {
        "atcoder-commiter.username": {
          "type": "string",
          "default": "",
          "description": "Your AtCoder username"
        },
        "atcoder-commiter.repoUrl": {
          "type": "string",
          "default": "",
          "description": "GitHub repository URL for saving submissions (e.g., https://github.com/username/atcoder-archive)"
        },
        "atcoder-commiter.outputDir": {
          "type": "string",
          "default": "",
          "description": "Output directory path in the repository (leave empty for root)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "@octokit/rest": "^21.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
